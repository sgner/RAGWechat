.container {
  padding: 32rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  background-color: #fff;
  padding: 32rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.kb-profile {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.kb-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #f5f7fa;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  flex-shrink: 0;
}

.kb-info {
  flex: 1;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.language-tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  margin-bottom: 16rpx;
  font-size: 24rpx;
  background-color: #f5f7fa;
  color: #333;
  border-radius: 4rpx;
}

.desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 16rpx;
}

.tag {
  margin-right: 8rpx;
}

.section {
  background-color: #fff;
  padding: 32rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
  position: relative;
  padding-left: 24rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 8rpx;
  width: 8rpx;
  height: 32rpx;
  background-color: #0052d9;
  border-radius: 4rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

/* 修复添加文档按钮位置 */
.section-header t-button {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 0;
}

/* 技术信息区域 */
.tech-section {
  margin-bottom: 24rpx;
}

.tech-grid {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tech-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1px solid #eee;
}

.tech-label {
  font-size: 28rpx;
  color: #666;
}

.tech-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.flex-row {
  display: flex;
  align-items: center;
  color: #0052d9;
}

/* 统计信息区域 */
.stats-section {
  margin-bottom: 24rpx;
  padding: 24rpx;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
}

.stats-item {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  border-radius: 8rpx;
  background-color: #f9f9f9;
  margin: 0 8rpx;
}

.stats-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #999;
}

/* 时间信息区域 */
.time-section {
  display: flex;
  justify-content: space-between;
  padding: 24rpx 32rpx;
}

.time-item {
  flex: 1;
}

.time-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.time-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 文档列表样式更新 */
.document-list {
  margin-top: 24rpx;
}

.document-item {
  display: flex;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  position: relative;
  transition: all 0.3s ease;
  border: 1px solid #f0f0f0;
}

.document-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.document-icon {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
  background-color: #f9f9f9;
  border-radius: 12rpx;
}

.doc-thumbnail {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  object-fit: cover;
}

.document-info {
  flex: 1;
  overflow: hidden;
}

.document-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.document-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.document-type,
.document-size {
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 6rpx 16rpx;
  border-radius: 50rpx;
  font-weight: 500;
}

.document-stats {
  display: flex;
  gap: 24rpx;
  margin-bottom: 16rpx;
}

.document-chunks,
.document-tokens {
  font-size: 24rpx;
  color: #666;
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.document-chunks::before,
.document-tokens::before {
  content: none;
}

.document-status {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.status-label {
  font-size: 24rpx;
  color: #666;
}

.status-value {
  font-size: 24rpx;
  font-weight: 500;
  padding: 6rpx 16rpx;
  border-radius: 50rpx;
}

.status-done {
  background-color: #e6f7ef;
  color: #00a870;
}

.status-failed {
  background-color: #ffece8;
  color: #e34d59;
}

.status-processing {
  background-color: #e6f3ff;
  color: #0052d9;
}

.progress-text {
  font-size: 22rpx;
  color: #0052d9;
  margin-left: 8rpx;
}

progress {
  width: 100%;
  margin-top: 8rpx;
  height: 6rpx;
  border-radius: 3rpx;
}

.document-dates {
  margin-top: 12rpx;
}

.update-date {
  font-size: 22rpx;
  color: #999;
}

.document-actions {
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 32rpx;
  margin-left: 24rpx;
  opacity: 0.7;
  transition: opacity 0.2s ease;
}

.document-actions:active {
  opacity: 1;
}

.delete-icon {
  color: #e34d59;
}

.load-more {
  text-align: center;
  padding: 32rpx 0;
  color: #0052d9;
  font-size: 28rpx;
}

.load-more-button {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  background-color: #f0f5ff;
  width: 240rpx;
  height: 64rpx;
  margin: 0 auto;
  border-radius: 32rpx;
  transition: all 0.2s ease;
}

.load-more-button:active {
  background-color: #e0e9ff;
  transform: scale(0.98);
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.empty-add-btn {
  margin-top: 32rpx;
}

/* 编辑文档对话框 */
.dialog-content {
  padding: 16rpx;
}

/* 配置详情对话框 */
.config-detail-content {
  max-height: 60vh;
  padding: 16rpx;
}

.config-detail-item {
  padding: 16rpx 0;
  border-bottom: 1px solid #eee;
  display: flex;
  flex-direction: column;
}

.config-detail-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.config-detail-value {
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
}

.config-empty {
  padding: 32rpx 0;
  text-align: center;
  color: #999;
} 